	href="../easyUI/themes/default/easyui.css">
<link rel="stylesheet" type="text/css" href="../easyUI/themes/icon.css">
<script type="text/javascript" src="../easyUI/jquery-1.8.0.min.js"></script>
<script type="text/javascript" src="../js/safe.js"></script>
<script type="text/javascript" src="../easyUI/jquery.easyui.min.js"></script>
<link rel="stylesheet" type="text/css" href="../css/style.css">
<script type="text/javascript">
    function edit()
    {
    	var aCheckedNode = $('#tt').tree('getChecked','checked');
    	var aIndetNode = $('#tt').tree('getChecked','indeterminate');
    	var aNode = aCheckedNode.concat(aIndetNode);
    	var aNode2 = new Array();
    	for(var i = 0; i < aNode.length; i++){
    	    if(aNode[i].id != 0){
    	    	aNode2.push(aNode[i].id);
    	    }
    	}
    	$.ajax({
		type : 'POST',
		url : '../ajax/editRight',
		data : {'userTypeId':3,'rights':aNode2.toString()},
		success : function(result) {
		    if(result == '1'){
		    	$('#tt').tree('reload');
			    $('#message').html('权限设置成功');
		    }else if(result == '0'){
		        $('#message').html('权限设置失败,请确认是否管理员');
		    }
		},
		error : function(error) {
		    $('#message').html('权限设置失败');
		},
		dataType : 'json'
	});
    }
    </script>
</head>
<body>
	<table class="formtable">
		<tr>
			<td colspan="2" align="center"><h2>代理权限设置</h2></td>
		</tr>
		<tr>
			<td width="40%">
				<ul id="tt" class="easyui-tree"
					url="../ajax/tree_menu_getdata2?userTypeId=3" checkbox="true">
				</ul>
			</td>
			<td valign="bottom"><input type="submit" value="修改" width="100"
				onclick="javascript:edit();" /><label style="padding-left: 50px;"
				id="message"></label></td>
		</tr>
	</table>
</body>
